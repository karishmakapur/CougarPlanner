<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="#75A4E9"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.183" />

    <ScrollView
        android:id="@+id/taskScrollView"
        android:layout_width="355dp"
        android:layout_height="357dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.00999999">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskTextView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskTextView10"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#9CA9C4"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/task_here"
                android:textAllCaps="true"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

    <Spinner
        android:id="@+id/viewSpinner"
        android:layout_width="163dp"
        android:layout_height="42dp"
        android:prompt="@string/change_view"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="46dp"
        android:layout_height="47dp"
        android:background="@drawable/baseline_arrow_back_ios_black_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />


</androidx.constraintlayout.widget.ConstraintLayout>